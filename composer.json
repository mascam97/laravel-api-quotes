{
    "name": "mascam97/laravel-api-quotes",
    "type": "project",
    "description": "Main portfolio as PHP Backend Developer - Community to rate quotes",
    "keywords": [
        "laravel",
        "php",
        "api-rest",
        "ratings",
        "test-driven-development",
        "laravel-sail",
        "laravel-sanctum",
        "phpstan",
        "query-builder"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Mart√≠n S. Campos",
            "homepage": "https://github.com/mascam97"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.5",
        "laravel-lang/lang": "~8.0",
        "laravel/framework": "^10.0",
        "laravel/passport": "^11.8",
        "laravel/sanctum": "^3.2",
        "laravel/tinker": "^2.5",
        "league/flysystem-aws-s3-v3": "3.0",
        "maatwebsite/excel": "^3.1",
        "spatie/laravel-activitylog": "^4.7",
        "spatie/laravel-data": "^2.1",
        "spatie/laravel-model-states": "^2.3",
        "spatie/laravel-permission": "^5.9",
        "spatie/laravel-query-builder": "5.1.2",
        "spatie/laravel-queueable-action": "^2.14",
        "symfony/http-client": "^6.0",
        "symfony/mailgun-mailer": "^6.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.7",
        "beyondcode/laravel-dump-server": "^1.8",
        "beyondcode/laravel-query-detector": "^1.7",
        "eduarguz/shift-php-cs": "^3.0",
        "fakerphp/faker": "^1.9.1",
        "knuckleswtf/scribe": "^4.23",
        "laravel/sail": "^1.3",
        "mockery/mockery": "^1.4.2",
        "nunomaduro/collision": "^7.0",
        "nunomaduro/larastan": "2.4.1",
        "nunomaduro/phpinsights": "^2.6",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpunit/phpunit": "^10.0.0",
        "rector/rector": "^0.15",
        "roave/security-advisories": "dev-latest",
        "spatie/laravel-ignition": "^2.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "Domain\\": "src/Domain/",
            "Support\\": "src/Support/",
            "Services\\": "src/Services/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "php-cs-fixer": "vendor/bin/php-cs-fixer fix",
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "phpstan": "vendor/bin/phpstan analyse",
        "phpstan-test": "vendor/bin/phpstan analyse -c phpstan.tests.neon",
        "rector": "vendor/bin/rector process src"
    }
}
